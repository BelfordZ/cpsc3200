#include <algorithm>
#include <iostream>
#include <string>
#include <vector>
#include <cmath>

using namespace std;

const double eps = 10E-4;
vector<int> house;

int nPointReq(double d)
{
   int n = 1;
   double covered = house[0] + d;
   for (size_t i = 0; i < house.size(); ++i)
      if (house[i] > covered)
	 covered = house[i] + d, ++n;
   return n;
}

int main()
{
   int n, pointI, homeI;
   cin >> n;
   cout.precision(1);
   while (n--)
   {
      cin >> pointI >> homeI;
      house = 0; //.clear();

      for (int i = 0, d; i < homeI; ++i)
      {
	 cin >> d;
	 house.push_back(d);
      }
      sort(house.begin(), house.end());

      double a = 0;
      double b;
      double c = house[house.size() - 1];
      do
      {
	 b = (c + a) / 2.0;
	 int pointsRequired =  1;
	 double covered = house[0] + b;
	 for (size_t i = 0; i < house.size(); ++i)
	    if (house[i] > covered)
	       covered = house[i] + b, ++pointsRequired;
	 
	 if (pointsRequired > pointI)
	 a = b;
	 else
	    c = b;
      } while (c - a > eps);
      
      cout << fixed << (round(b * 10) / 20.0) << endl;
   }
   return 0;
}
